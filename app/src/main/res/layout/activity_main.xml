<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mayi.iosalertandsheet.MainActivity">

    <Button
        android:onClick="onClickA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="常规Sheet"/>
    <Button
        android:onClick="onClickB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="去标题变文字颜色Sheet"/>
    <Button
        android:onClick="onClickC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="常规Alert"/>
    <Button
        android:onClick="onClickD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义样式Alert"/>
    <Button
        android:onClick="onClickE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义视图Alert"/>
</LinearLayout>
